{
  "compilerOptions": {
    "target": "ES2020", // Output JavaScript version
    "module": "CommonJS", // Module system
    "rootDir": "./src", // Directory for TypeScript files
    "outDir": "./dist", // Output directory for compiled files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow default imports from CommonJS
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true, // Allow importing JSON files
    "moduleResolution": "node", // Resolve modules using Node.js style
    "typeRoots": ["./node_modules/@types", "./src/types"] // Include custom types
  },
  "include": ["src/**/*"], // Include all .ts files in src
  "exclude": ["node_modules"] // Exclude node_modules
}
